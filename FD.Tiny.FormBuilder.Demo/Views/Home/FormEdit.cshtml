                                            <el-form-item prop="relateName" label="关联名称" :rules="[{required: true, message: '请输入关联名称', trigger: 'blur'}]">
                                                <el-input v-model="relateAddForm.relateName" placeholder="关联名称"></el-input>
                                            </el-form-item>
