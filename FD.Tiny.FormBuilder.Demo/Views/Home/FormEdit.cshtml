                                            <template slot-scope="scope">
                                                <span v-text="scope.row.condition_item.inner_value"></span>
                                            </template>
                                        </el-table-column>
                                        <el-table-column label="操作"
                                                         align="center"
                                                         width="60">
                                            <template slot-scope="scope">
                                                <el-button type="text" v-on:click="conditionDelete(scope.$index)"><i class="el-icon-delete"></i></el-button>
                                            </template>
                                        </el-table-column>
                                    </el-table>
