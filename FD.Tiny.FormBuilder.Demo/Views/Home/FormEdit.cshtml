                                            <el-form-item prop="conditionExpr" label="条件表达式" :rules="[{required: true,message: '请输入条件表达式', trigger: 'blur'},{pattern:'^[1-9]\d*$',message: '哈哈哈',trigger: 'blur'}]">
                                                <el-input v-model="conditionAddForm.conditionExpr" placeholder="条件表达式"></el-input>
                                            </el-form-item>
